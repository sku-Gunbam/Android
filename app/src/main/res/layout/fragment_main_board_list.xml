<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_to_board_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bullet_shape"
                android:paddingBottom="5dp"
                android:text="자유\n게시판"/>

            <Button
                android:id="@+id/main_to_board_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bullet_shape"
                android:paddingBottom="5dp"
                android:text="군인\n게시판" />

            <Button
                android:id="@+id/main_to_board_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bullet_shape"
                android:paddingBottom="5dp"
                android:text="신병\n게시판"/>

            <Button
                android:id="@+id/main_to_board_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bullet_shape"
                android:paddingBottom="5dp"
                android:text="정보\n게시판" />

            <Button
                android:id="@+id/main_to_board_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bullet_shape"
                android:paddingBottom="5dp"
                android:text="비밀\n게시판"/>
        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>